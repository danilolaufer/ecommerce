<div>
    <h1 id="userCart" style="padding: 2%">Cart</h1>
    <h4><a href="/session/profile">Back to profile</a></h4>
</div>

<div class="container" style="padding: 2%">
    {{#if amount }}
    <h1 class="d-flex flex-row-reverse ">Amount: $ {{amount}},00</h3>
        {{else}}
        <h1 class="text-center">Cart empty</h3>
            {{/if}}
            <div id="products-in-cart" class="container  border border-info">

                {{#each products}}
                <div class=" row m-2" style="">
                    <img class="col-3" src={{this.thumbnail}} style="max-width: 100px; max-height: 200px">
                    <h3 class="col-3">{{this.title}}</h3>
                    <h4 class="col-3">Quantity: {{this.quantity}}</h4>
                    <h3 class="col-3">$ {{this.price}}</h3>

                </div>
                {{/each}}


            </div>
            {{#if amount }}
            <div class=" d-flex flex-row m-2" >
                <div class=" col">
                    <a href='/products' class="btn btn-primary btn-lg btn-block">Continue buying</a>
                </div>
                <div class=" d-flex flex-row-reverse ">
                    <a href='/api/carts/{{cart}}/purchase' class="btn btn-primary btn-lg btn-block">Checkout</a>
                </div>
            </div>

            {{/if}}
</div>

<script src="/js/cart.view.js"></script>