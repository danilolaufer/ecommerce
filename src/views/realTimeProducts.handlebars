<div class="container">
  <div style=" float:left;padding: 28px">
    <form action="http://localhost:8080/">
      <button type="submit" class="btn btn-outline-success">Home
      </button>
    </form>

  </div>
  <h1 style="text-align: center;" class="mt-2">Lista de Productos con Socket</h1>


  <h2 style="text-align: center">Agregar un Producto</h2>
  <div
    style="position: relative; border: 3px solid rgb(92, 0, 0); width: 90%; left: 5%; border-radius: 10px ;padding: 30px 0 50px; margin: 63px 0px 60px 0px;">
    <form id="formProducts" action="/realtimeproducts" method="POST">
      <div class="mx-2 mb-4">
        <input type="text" class="form-control" id="title" placeholder="Nombre del producto.."
          aria-describedby="emailHelp">
      </div>
      <div class="mx-2 mb-4">
        <input type="text" class="form-control" id="description" placeholder="Descripción:">
      </div>
      <div class="mx-2 mb-4">
        <input type="number" class="form-control  " id="price" placeholder="Precio">
      </div>
      <div class="mx-2 mb-4">
        <input type="text" class="form-control  " id="category" placeholder="Categoria">
      </div>
      <div class="mx-2 mb-4">
        <input type="text" class="form-control" id="thumbnails" placeholder="link  image: https://... ">
      </div>
      <div class="mx-2 mb-4">
        <input type="text" class="form-control" id="code" placeholder="Código">
      </div>
      <div class="mx-2 mb-4">
        <input type="number" class="form-control" id="stock" placeholder="Stock">
      </div>
      <button type="submit" class="btn btn-primary position-relative start-50 top-0 translate-middle-x mb-2"
        id="buttonForm">Submit</button>
    </form>
  </div>
  <div>
    <h1 style="text-align: center; color: red" class="mt-2">Lista de Productos</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Precio</th>
          <th scope="col">Stock</th>
          <th scope="col">Categoria</th>
          <th scope="col">Código</th>
          <th scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody id="listaProd">
        {{#each data}}
        <tr>

          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>${{price}}</td>
          <td>{{stock}}</td>
          <td>{{category}}</td>
          <td>{{code}}</td>
          <td><img src={{thumbnails}} alt="" width="50%" /> </td>
        </tr>

        {{/each}}
      </tbody>
    </table>

  </div>


</div>

<script src="/socket.io/socket.io.js"></script>

<script src="/js/index.js"></script>